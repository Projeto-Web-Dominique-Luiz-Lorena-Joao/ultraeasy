<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Endereço</h1>
  
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm font-medium text-gray-500">Rua</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.street %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Número</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.number %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Complemento</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.complement.presence || '-' %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Bairro</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.neighborhood %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Cidade</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.city %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Estado</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.state %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">País</p>
        <p class="mt-1 text-sm text-gray-900"><%= @address.country %></p>
      </div>
    </div>
  </div>

  <div class="mb-4 flex justify-between items-center">
    <h2 class="text-2xl font-bold text-gray-900">Pacientes neste endereço</h2>
    <%= link_to 'Adicionar Paciente', new_address_patient_path(@address), class: 'bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition' %>
  </div>
  
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telefone</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data de Nascimento</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @patients.each do |patient| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= patient.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= patient.email %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= patient.phone %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= patient.birthdate.strftime('%d/%m/%Y') if patient.birthdate %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to 'Ver', patient, class: 'text-blue-600 hover:text-blue-900' %>
              <%= link_to 'Editar', edit_patient_path(patient), class: 'text-yellow-600 hover:text-yellow-900' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex space-x-4">
    <%= link_to 'Editar Endereço', edit_address_path(@address), class: 'bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition' %>
    <%= link_to 'Voltar', addresses_path, class: 'bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition' %>
  </div>
</div>