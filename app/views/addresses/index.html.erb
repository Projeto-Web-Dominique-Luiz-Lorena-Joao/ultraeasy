<div class="mb-6 flex justify-between items-center">
  <h1 class="text-3xl font-bold text-gray-900">Endereços</h1>
  <%= link_to 'Novo Endereço', new_address_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition' %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rua</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Número</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bairro</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cidade</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pacientes</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @addresses.each do |address| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= address.street %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= address.number %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= address.neighborhood %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= address.city %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= address.state %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded"><%= address.patients.count %></span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
            <%= link_to 'Ver', address, class: 'text-blue-600 hover:text-blue-900' %>
            <%= link_to 'Editar', edit_address_path(address), class: 'text-yellow-600 hover:text-yellow-900' %>
            <%= link_to 'Excluir', address, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'text-red-600 hover:text-red-900' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>