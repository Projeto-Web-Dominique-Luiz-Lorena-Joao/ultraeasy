<%= form_with(model: address, local: true, class: "space-y-6") do |f| %>
  <% if address.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(address.errors.count, "erro") %> ao salvar:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :street, 'Rua', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.text_field :street, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= f.label :number, 'Número', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :number, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
    
    <div class="col-span-2">
      <%= f.label :complement, 'Complemento', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :complement, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  </div>

  <div>
    <%= f.label :neighborhood, 'Bairro', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.text_field :neighborhood, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div class="col-span-2">
      <%= f.label :city, 'Cidade', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :city, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
    
    <div>
      <%= f.label :state, 'Estado', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :state, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  </div>

  <div>
    <%= f.label :country, 'País', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.text_field :country, value: address.country || 'Brasil', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <%= f.submit address.new_record? ? 'Criar Endereço' : 'Atualizar Endereço', class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition cursor-pointer' %>
<% end %>