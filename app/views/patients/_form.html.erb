<%= form_with(model: patient, local: true, class: "space-y-6") do |f| %>
  <% if patient.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(patient.errors.count, "erro") %> ao salvar:
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, 'Nome', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div>
    <%= f.label :email, 'Email', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :phone, 'Telefone', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.text_field :phone, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
    
    <div>
      <%= f.label :birthdate, 'Data de Nascimento', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.date_field :birthdate, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>
  </div>

  <div>
    <%= f.label :address_id, 'Endereço', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    <%= f.collection_select :address_id, @addresses, :id, :full_address, { prompt: 'Selecione um endereço' }, { class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' } %>
    <p class="mt-2 text-sm text-gray-500">
      Não encontrou o endereço? <%= link_to 'Cadastre um novo endereço', new_address_path, target: '_blank', class: 'text-blue-600 hover:text-blue-900 font-medium' %>
    </p>
  </div>

  <%= f.submit patient.new_record? ? 'Criar Paciente' : 'Atualizar Paciente', class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition cursor-pointer' %>
<% end %>